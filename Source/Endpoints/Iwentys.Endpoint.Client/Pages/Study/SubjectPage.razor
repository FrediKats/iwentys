@page "/subject/profile/{SubjectId:int}"

@using Iwentys.Endpoint.Client.CustomComponents
@using Iwentys.Features.Study.SubjectAssignments.Models

@inherits DependencyInjectionPage

<h3>SubjectPage</h3>

@if (_subjectProfile is not null)
{
    <div class="container-fluid d-flex flex-row">
        <div class="col-md-6 d-flex flex-column">
            <MatHeadline4>Info</MatHeadline4>
            <MatBody1>@_subjectProfile.Name</MatBody1>
            <div>
                <h5>Subject assignment</h5>
                @if (_subjectAssignments is not null)
                {
                    <div>
                        @foreach (SubjectAssignmentDto subjectAssignment in _subjectAssignments)
                        {
                            //TODO: make generic style for card-like elements
                            <div class="card-list-element">
                                <MatCard Class="dark-elevation-01">
                                    <MatCardContent>
                                        <div class="card-list-element-content">
                                            <MatHeadline6>
                                                @subjectAssignment.Title
                                            </MatHeadline6>
                                        </div>
                                    </MatCardContent>
                                </MatCard>
                            </div>

                        }
                    </div>
                }
            </div>
        </div>

        <div class="col-md-6 d-flex flex-column">
            <div>
                <MatH6>Newsfeed</MatH6>
                @if (_newsfeeds is not null)
                {
                    <NewsfeedComponent Newsfeeds=@_newsfeeds></NewsfeedComponent>
                    <MatButton Link=@LinkToCreateNewsfeedPage()>Create</MatButton>
                }
            </div>

        </div>
    </div>
}

@code {
    [Parameter]
    public int SubjectId { get; set; }
}