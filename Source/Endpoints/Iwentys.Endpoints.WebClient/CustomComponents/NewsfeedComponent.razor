@using Iwentys.Sdk

@namespace Iwentys.Endpoints.WebClient.CustomComponents

<div class="container-fluid d-flex flex-column">
    <MudText Typo="Typo.h5">Анонсы</MudText>
    @foreach (NewsfeedViewModel newsfeed in Newsfeeds)
    {
        <div class="newsfeed-element">
            <MudCard Class="dark-elevation-01">
                <MudCardContent>
                    <div class="newsfeed-element-content">
                        <MudText Typo="Typo.h6">
                            @newsfeed.Title
                        </MudText>
                        <MudText Typo="Typo.body1">
                            @newsfeed.Content
                        </MudText>
                        <MudText Typo="Typo.body2">
                            @newsfeed.CreationTimeUtc
                        </MudText>
                    </div>
                </MudCardContent>
            </MudCard>
        </div>
    }
</div>

@code
{
    [Parameter]
    public ICollection<NewsfeedViewModel> Newsfeeds { get; set; }
}
