@using Iwentys.WebClient.IdentityAuthorization
@using System.Reflection

<CascadingAuthenticationState>
	<Router AppAssembly="@typeof(Program).Assembly" AdditionalAssemblies="_extraAssemblies">
		<Found Context="routeData">
			<AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
				<NotAuthorized>
					@if (!context.User.Identity.IsAuthenticated)
					{
						<RedirectToLogin />
					}
					else
					{
						<p>You are not authorized to access this resource.</p>
					}
				</NotAuthorized>
			</AuthorizeRouteView>
		</Found>
		<NotFound>
			<LayoutView Layout="@typeof(MainLayout)">
				<p>Sorry, there's nothing at this address.</p>
			</LayoutView>
		</NotFound>
	</Router>
</CascadingAuthenticationState>

@code{

	private List<Assembly> _extraAssemblies = new List<Assembly>()
	{
		typeof(LoginDisplay).Assembly
	};

}
